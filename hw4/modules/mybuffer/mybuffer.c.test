#include <stdlib.h>
#include <sys/stat.h>
#include <assert.h>
#include <stdio.h>
#include <string.h>
#include <fcntl.h>
#include <unistd.h>
#include <errno.h>

int main() {
    int fd;
    ssize_t rd, wr;
    char buf[10];
    char* abc = "Teststring";

    fd = open("/dev/mybuffer", O_RDWR);
    printf("Open: %d\n", fd);
 
    if(fd <0)
        perror("open: ");
	return 1;
    
    wr = write(fd, abc, 10);
    printf("Wrote: %d", wr);
    
    if(wr < 0) {
	perror("write: ");
	return 1;
	}

    rd = read(fd, buf, 10);
    //printf("Messagee: %s\n", buf);
    printf("Read: %d", rd);
    
    return 0;
}
