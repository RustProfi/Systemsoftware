#include<stdlib.h>
#include <sys/stat.h>
#include <assert.h>
#include <stdio.h>

int main() {
	struct stat sb;
	char* path = "/dev/simple_chardev";
	
	//try to get infos of the path
        int result = stat(path, &sb);

	//checks if path exists
	assert(result >= 0);
	//checks if it's a character device via macro
	assert(S_ISCHR(sb.st_mode));
	return 0;

}
