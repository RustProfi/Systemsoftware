#include <stdlib.h>
#include <sys/stat.h>
#include <assert.h>
#include <stdio.h>
#include <string.h>
#include <fcntl.h>
#include <unistd.h>
#include <errno.h>
#include <time.h>
#include <pthread.h>
#include <signal.h>

void *tryopen(void *number) {
    if(open("/dev/mysemaphore", O_RDWR) < 0) {
        perror("open: ");
    } else {
        printf("Thread %d finally did it\n", *(int *)number);
    }
}

int main() {
    pthread_t t1, t2, t3;
    int one = 1, two = 2, three = 3;
    
    pthread_create(&t1, NULL,tryopen, &one);
    pthread_create(&t2, NULL,tryopen, &two);
    pthread_create(&t3, NULL,tryopen, &three);
    
    pthread_join(t1, NULL);
    pthread_join(t2, NULL);
    pthread_join(t3, NULL);
    
    return 0;
}
